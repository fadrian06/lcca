{
  "require": {
    "php": "^8.2",
    "ext-pdo": "*",
    "ext-pdo_sqlite": "*",
    "ext-pdo_mysql": "*",
    "flightphp/core": "^3.13",
    "symfony/dotenv": "^7.2",
    "symfony/polyfill-php84": "^1.31",
    "jenssegers/date": "^4.0",
    "leafs/form": "^3.2",
    "leafs/password": "^1.0",
    "leafs/auth": "^3.4",
    "leafs/db": "^2.3",
    "leafs/session": "^2.3",
    "illuminate/container": "^11.41"
  },
  "scripts": {
    "dev": "composer i & start php -S localhost:80",
    "build": [
      "phpstan",
      "composer i --no-dev",
      "composer archive"
    ],
    "pre-install-cmd": [
      "composer check-platform-reqs"
    ],
    "ci": [
      "phpunit --no-progress",
      "phpstan -cphpstan.neon --memory-limit=1G --no-progress",
      "biome check assets --apply"
    ],
    "test": "phpunit"
  },
  "autoload": {
    "psr-4": {
      "LCCA\\": "app"
    }
  },
  "require-dev": {
    "symfony/var-dumper": "^7.2",
    "phpstan/phpstan": "^2.1",
    "phpstan/extension-installer": "^1.4",
    "phpstan/phpstan-strict-rules": "^2.0",
    "phpstan/phpstan-deprecation-rules": "^2.0",
    "phpunit/phpunit": "^11.5",
    "phpstan/phpstan-phpunit": "^2.0",
    "staabm/phpstan-todo-by": "^0.2.0",
    "spaze/phpstan-disallowed-calls": "^4.2"
  },
  "archive": {
    "name": "LCCA",
    "exclude": [
      ".env.example",
      ".gitignore",
      ".git",
      "composer.*",
      "*.sql",
      "docs",
      "*.tar",
      "*.sublime-*",
      "*.backup",
      "backup.*"
    ]
  },
  "config": {
    "allow-plugins": {
      "phpstan/extension-installer": true
    }
  }
}
